üìÑ backend/shopify-webhooks/produto-sync.js

const ShopifyAPI = require('@shopify/shopify-api');

async function sincronizarProdutos(produtos) {
  const shopify = new ShopifyAPI.Clients.Rest(
    process.env.SHOPIFY_SHOP, 
    process.env.SHOPIFY_ACCESS_TOKEN
  );

  for (let produto of produtos) {
    await shopify.product.create({
      product: {
        title: produto.nome,
        body_html: produto.descricao,
        vendor: produto.marca,
        product_type: 'Smartwatch',
        variants: [{
          price: produto.preco.toString()
        }]
      }
    });
  }
}

module.exports = { sincronizarProdutos };
