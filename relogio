üìÑ frontend/src/App.tsx

import React from 'react';
import { BrowserRouter, Routes, Route } from 'react-router-dom';
import { AuthProvider } from './context/AuthContext';
import { CarrinhoProvider } from './context/CarrinhoContext';
import { NotificacaoProvider } from './context/NotificacaoContext';

import Header from './components/Header';
import Footer from './components/Footer';
import Home from './pages/Home';
import Produtos from './pages/Produtos';
import ProdutoDetalhe from './pages/ProdutoDetalhe';
import Carrinho from './pages/Carrinho';
import Checkout from './pages/Checkout';
import Conta from './pages/Conta';

const App: React.FC = () => {
  return (
    <AuthProvider>
      <CarrinhoProvider>
        <NotificacaoProvider>
          <BrowserRouter>
            <div className="flex flex-col min-h-screen">
              <Header />
              <main className="flex-grow">
                <Routes>
                  <Route path="/" element={<Home />} />
                  <Route path="/produtos" element={<Produtos />} />
                  <Route path="/produto/:id" element={<ProdutoDetalhe />} />
                  <Route path="/carrinho" element={<Carrinho />} />
                  <Route path="/checkout" element={<Checkout />} />
                  <Route path="/conta" element={<Conta />} />
                </Routes>
              </main>
              <Footer />
            </div>
          </BrowserRouter>
        </NotificacaoProvider>
      </CarrinhoProvider>
    </AuthProvider>
  );
}

export default App;
üìÑ backend/supabase/migrations/initial_schema.sql

-- Cria√ß√£o da tabela de usu√°rios
CREATE TABLE usuarios (
  id UUID PRIMARY KEY DEFAULT uuid_generate_v4(),
  nome TEXT,
  email TEXT UNIQUE NOT NULL,
  senha TEXT NOT NULL,
  endereco TEXT,
  telefone TEXT,
  criado_em TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

-- Cria√ß√£o da tabela de produtos
CREATE TABLE produtos (
  id UUID PRIMARY KEY DEFAULT uuid_generate_v4(),
  nome TEXT NOT NULL,
  descricao TEXT,
  preco NUMERIC(10,2) NOT NULL,
  categoria TEXT,
  imagem TEXT,
  estoque INTEGER
);

-- Cria√ß√£o da tabela de pedidos
CREATE TABLE pedidos (
  id UUID PRIMARY KEY DEFAULT uuid_generate_v4(),
  usuario_id UUID REFERENCES usuarios(id),
  data TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
  total NUMERIC(10,2) NOT NULL,
  status TEXT DEFAULT 'pendente'
);
